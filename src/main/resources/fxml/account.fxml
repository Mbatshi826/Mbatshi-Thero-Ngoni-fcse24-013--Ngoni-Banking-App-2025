<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>

<VBox spacing="10" alignment="CENTER" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/17.0.2-ea" fx:controller="controller.AccountController">
    <Label text="Customer Accounts"/>
    <TableView fx:id="accountsTable"/>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Create Account" onAction="#createAccount"/>
        <Button text="View Accounts" onAction="#viewAccounts"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <TextField fx:id="accountNumberField" promptText="Account Number"/>
        <TextField fx:id="amountField" promptText="Amount"/>
    </HBox>

    <HBox spacing="10" alignment="CENTER">
        <Button text="Deposit" onAction="#deposit"/>
        <Button text="Withdraw" onAction="#withdraw"/>
        <Button text="Apply Interest" onAction="#applyInterest"/>
    </HBox>
    
    <Label fx:id="messageLabel"/>
</VBox>
